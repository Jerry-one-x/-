.brand_head {
  margin-left: 50rpx;
  margin-top: 130rpx;
  width: 650rpx;
  height: 66rpx;
  border-top: 6rpx solid #121212;
  border-bottom: 6rpx solid #121212;
  color: #121212;
  line-height: 66rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.brand_container {
  display: flex;
  justify-content: space-around;  	/*水平居中*/
  align-items: center;    	/*垂直居中*/
  flex-wrap: wrap;      /* 换行*/
  width: 650rpx;
  height: 576rpx;
  margin-top: 19rpx;
  margin-left: auto;
  margin-right: auto;
  background: rgb(243, 243, 243);
  border: 6rpx solid rgba(255, 255, 255, 1);
  box-shadow: -13rpx -10rpx 18rpx rgb(230, 230, 230), 11rpx 14rpx 18rpx rgb(207, 207, 207);
  border-radius: 34rpx;
}

.brand_sep {
  position: relative;
  width: 170rpx;
  height: 216rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: -3px -3px 7px rgba(255, 255, 255, 1), 3px 3px 7px rgb(185, 185, 185);
  border-radius: 18rpx;
}
.brand_sep image {
  display: block;
  align-items: center;
  margin: auto;
  width: 60%;
  height: 129rpx;
}
.brand_sep view {
  display: block;
  width: auto;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  margin: 20rpx auto ;
  color: rgba(0, 0, 0, 1);
  font-size: 30rpx;
  font-weight: 500;
}

