  font-size: 24rpx;
  font-weight: 400;
  color: #ffffff;
  background-color:rgba(255, 255, 255, 0.5);
  line-height: 60rpx;
}
.scrollItem:hover {
  background-color:rgba(255, 255, 255, 0.281);
}

